//      ** ЗначениеПравое - Строка, Дата, Число -
//
Функция ОтличияВДанныхПоПутям(ДанныеПоПутямЛевые, ДанныеПоПутямПравые)
	
	ОтличияВДанных = Новый Соответствие();
	
	Для Каждого Элемент Из ДанныеПоПутямЛевые Цикл
		
		ПутьЛевый = Элемент.Ключ;
		ЛевоеЗначение = Элемент.Значение;
		
		ПравоеЗначение = ДанныеПоПутямПравые[ПутьЛевый];
		Если ПравоеЗначение <> ЛевоеЗначение Тогда
			
			Отличия = Новый Структура;
			Отличия.Вставить("ЗначениеЛевое", ЛевоеЗначение);
			Отличия.Вставить("ЗначениеПравое", ПравоеЗначение);
			
			ОтличияВДанных[ПутьЛевый] = Отличия;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Для Каждого Элемент Из ДанныеПоПутямПравые Цикл
		
		ПутьПравый = Элемент.Ключ;
		ПравоеЗначение = Элемент.Значение;
		
		ЛевоеЗначение = ДанныеПоПутямЛевые[ПутьПравый];
		Если ЛевоеЗначение = Неопределено Тогда
			
			Отличия = Новый Структура;
			Отличия.Вставить("ЗначениеЛевое", ЛевоеЗначение);
			Отличия.Вставить("ЗначениеПравое", ПравоеЗначение);
			
			ОтличияВДанных[ПутьПравый] = Отличия;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат ОтличияВДанных;
	
КонецФункции

