Функция ДобавитьСтрокуРазделаГорячихКлавиш(ИмяРаздела)
	
	СтрокаРаздела = ДеревоГорячиеКлавиши.ПолучитьЭлементы().Добавить();
	СтрокаРаздела.ИмяРаздела = ИмяРаздела;
