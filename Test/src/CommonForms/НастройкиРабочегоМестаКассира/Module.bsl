	ОписаниеСтроки.Вставить("АкселераторCtrl", СтрокаГорячаяКлавиша.АкселераторCtrl);
	ОписаниеСтроки.Вставить("АкселераторShift", СтрокаГорячаяКлавиша.АкселераторShift);
