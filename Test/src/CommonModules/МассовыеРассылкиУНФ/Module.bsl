// Обработчик регламентного задания ВыполнениеМассовойРассылки
//
Процедура ЗаданиеОбработатьОчередьРассылок() Экспорт
	
	ОбщегоНазначения.ПриНачалеВыполненияРегламентногоЗадания(
	Метаданные.РегламентныеЗадания.ВыполнениеМассовойРассылки);
	
	УстановитьПривилегированныйРежим(Истина);
	
	НачатьТранзакцию();
	
	Попытка
		
		БлокировкаДанных = Новый БлокировкаДанных;
		ЭлементБлокировкиДанных = БлокировкаДанных.Добавить("РегистрСведений.ОчередьРассылок");
		БлокировкаДанных.Заблокировать();
		
		ПорцияСообщений = ПодготовитьПорциюСообщений(100);
		РегистрыСведений.ОчередьРассылок.ЗарегистрироватьНачалоОтправки(ПорцияСообщений);
		
		ЗафиксироватьТранзакцию();
		
	Исключение
		
		ОтменитьТранзакцию();
		
		ТекстОшибки = ОбработкаОшибок.ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
		ЗаписьЖурналаРегистрации(
		ИмяСобытияЖурналаРегистрации(),
		УровеньЖурналаРегистрации.Ошибка, , ,
		ТекстОшибки);
		
		ВызватьИсключение;
		
	КонецПопытки;
	
	РазослатьПорциюСообщений(ПорцияСообщений);
	
	РассылкиДляСозданияСобытий = РассылкиДляСозданияСобытий();
	СоздатьСобытияПоОтправленнымРассылкам(РассылкиДляСозданияСобытий);
	
	ОтправленныеРассылки = ПолностьюОтправленныеМассовыеРассылки();
	СостоянияРассылок = СостоянияОтправленныхРассылок(ОтправленныеРассылки);
	УстановитьСостояниеОтправленныхРассылок(ОтправленныеРассылки, СостоянияРассылок);
	
	РегистрыСведений.ОчередьРассылок.УстановитьОшибкуДляSMS();
	РегистрыСведений.ОчередьРассылок.ОтключитьНевостребованноеЗадание();
	
	ОтправитьОповещениеНаКлиент(СостоянияРассылок);
	
КонецПроцедуры

