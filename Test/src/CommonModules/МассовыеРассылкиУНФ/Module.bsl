			ТекстСообщения = СтрШаблон(НСтр("ru='Не удалось автоматически установить состояние в документе: ""%1"".
			|По причине: %2'"), МассоваяРассылка.Ссылка, ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
			
			ЗаписьЖурналаРегистрации(
			ИмяСобытияЖурналаРегистрации(),
			УровеньЖурналаРегистрации.Предупреждение,
			Метаданные.Документы.МассоваяРассылка,
			МассоваяРассылка.Ссылка,
			ТекстСообщения);
			
		КонецПопытки;
		
	КонецЦикла;
	
КонецПроцедуры

Функция СостоянияОтправленныхРассылок(МассовыеРассылки)
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ДокументМассоваяРассылка.Ссылка КАК Ссылка,
		|	ОчередьРассылок.Состояние КАК Состояние
		|ИЗ
		|	РегистрСведений.ОчередьРассылок КАК ОчередьРассылок
		|		ЛЕВОЕ СОЕДИНЕНИЕ Документ.МассоваяРассылка КАК ДокументМассоваяРассылка
		|		ПО ОчередьРассылок.МассоваяРассылка = ДокументМассоваяРассылка.Ссылка
		|ГДЕ
		|	ДокументМассоваяРассылка.Ссылка В(&Ссылки)
		|
		|УПОРЯДОЧИТЬ ПО
		|	Ссылка
		|ИТОГИ ПО
		|	Ссылка";
	
	Запрос.УстановитьПараметр("Ссылки", МассовыеРассылки);
	
	Результат = Новый Соответствие;
	
	РезультатЗапроса = Запрос.Выполнить();
	Выборка = РезультатЗапроса.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	Пока Выборка.Следующий() Цикл
		
		ЕстьОтправленные = Ложь;
		ЕстьОшибки = Ложь;
		
		ВыборкаСостояний = Выборка.Выбрать();
		Пока ВыборкаСостояний.Следующий() Цикл
			
			Если Не ЕстьОшибки
				И ВыборкаСостояний.Состояние = Перечисления.СостоянияОтправкиРассылки.ОшибкаОтправки Тогда
				ЕстьОшибки = Истина;
			КонецЕсли;
			
			Если Не ЕстьОтправленные
				И ВыборкаСостояний.Состояние = Перечисления.СостоянияОтправкиРассылки.Отправлено Тогда
				ЕстьОтправленные = Истина;
			КонецЕсли;
			
		КонецЦикла;
		
		Если ЕстьОтправленные И ЕстьОшибки Тогда
			Результат[Выборка.Ссылка] = Перечисления.СостоянияОтправкиРассылки.ОтправленоЧастично;
		ИначеЕсли ЕстьОшибки Тогда
			Результат[Выборка.Ссылка] = Перечисления.СостоянияОтправкиРассылки.ОшибкаОтправки;
		Иначе
			Результат[Выборка.Ссылка] = Перечисления.СостоянияОтправкиРассылки.Отправлено;
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

Функция ИмяСобытияЖурналаРегистрации()
	
	Возврат НСтр("ru = 'Массовые рассылки УНФ'", ОбщегоНазначения.КодОсновногоЯзыка());
	
КонецФункции

Процедура ОтправитьОповещениеНаКлиент(СостоянияРассылок)
	
	Если Не СостоянияРассылок.Количество() Тогда
		Возврат;
	КонецЕсли;
	
	ИмяОповещения = МассовыеРассылкиУНФКлиентСервер.ИмяСерверногоОповещения();
	РезультатНаКлиент = РезультатДляПередачиНаКлиент(СостоянияРассылок);
	СерверныеОповещения.ОтправитьСерверноеОповещение(ИмяОповещения, РезультатНаКлиент, Неопределено, Истина);
	
КонецПроцедуры

Функция РезультатДляПередачиНаКлиент(СостоянияРассылок)
	
	Результат = Новый Структура;
	
	Количество = СостоянияРассылок.Количество();
	
	ОтправленоЧастично = Ложь;
	ОшибкаОтправки = Ложь;
	Для Каждого КлючЗначение Из СостоянияРассылок Цикл
		
		Состояние = КлючЗначение.Значение;
		
		Если Состояние = Перечисления.СостоянияОтправкиРассылки.ОшибкаОтправки Тогда
			ОшибкаОтправки = Истина;
			Прервать;
		КонецЕсли;
		
		Если Не ОтправленоЧастично И Состояние = Перечисления.СостоянияОтправкиРассылки.ОтправленоЧастично Тогда
			ОтправленоЧастично = Истина;
		КонецЕсли;
		
	КонецЦикла;
	
	Если ОшибкаОтправки Тогда
		СостояниеНаКлиент = Перечисления.СостоянияОтправкиРассылки.ОшибкаОтправки;
	ИначеЕсли ОтправленоЧастично Тогда
		СостояниеНаКлиент = Перечисления.СостоянияОтправкиРассылки.ОтправленоЧастично;
	Иначе
		СостояниеНаКлиент = Перечисления.СостоянияОтправкиРассылки.Отправлено;
	КонецЕсли;
	
	Результат.Вставить("КоличествоОтправленныхРассылок", Количество);
	Результат.Вставить("Состояние", СостояниеНаКлиент);
	
	Возврат Результат;
	
КонецФункции

