	Для Каждого Картинка Из Картинки Цикл
		Если Картинка.ПолучитьАтрибут("data-promocode") = Неопределено Тогда
			Продолжить;
		КонецЕсли;
		
		ДанныеВФорматеBase64 = Base64Строка(КартинкаЭтогоПромокода.ПолучитьДвоичныеДанные());
		НовыйПутьКартинки = СтрШаблон("data:image/jpg;base64,%1", ДанныеВФорматеBase64);
		
		Картинка.УстановитьАтрибут("src", НовыйПутьКартинки);
	КонецЦикла;
	
	Возврат Гипертекст.ПолучитьТекстHTMLИзОбъектаДокументHTML(ДокументHTML);
	
